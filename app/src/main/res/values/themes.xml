<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NotifyLog" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="Theme.NotifyLog.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Launch splash theme to avoid OS blank screen on cold start -->
    <style name="Theme.NotifyLog.Splash" parent="Theme.NotifyLog">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.NotifyLog.Splash.Dark" parent="Theme.NotifyLog.Dark">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
    </style>
</resources>
